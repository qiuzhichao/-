/**index.wxss**/
@import '../../style/stylesheet.wxss';
image{
  display: block;
  width: 100%;
  height: 100%;
}
.userinfo-avatar {
  width: 100%;
  height: 100%;
}
/* icon */
.iconfont {
  font-family: "iconfont";
  /* font-size:60rpx; */
 }
 .icon-qiandao1{
   color: #ffea00;
   font-size: 40rpx;
 }
 .view-top{
   width: 100%;
   height: 315rpx;
   background-color: #fd0c3f;
   vertical-align: middle;
   overflow: hidden;
   position: relative
 }
 .register{
   width: 100%;
   font-size: 27rpx;
   line-height: 27rpx;
   color: #ffea00;
   margin-top: 30rpx;
   padding-left:30rpx; 
 }
 .jackpot{
   text-align: center;
   font-size: 28rpx;
   margin-bottom: 30rpx;
   color: #fff;
 }
 .points{
   text-align: center;
   font-size:60rpx;
   color: #fff;
 }
 .doc{
  width:199.5rpx;
  height: 50rpx;
  font-size: 28rpx;
  background-color: #ffea00;
  color: #fd0c3f;
  margin: 20rpx auto 30rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 20rpx;
 }
 .resgin_rule{
  position: absolute;
  top: 146rpx;
  right: 32rpx;
  background-color: #fd0c3f;
  color: #fff;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  border: 1px solid #fff;
  border-radius: 6rpx;
  z-index: 999;
 }
 .prize{
   display: flex;
   font-size: 28rpx;
   height:60rpx;
   line-height: 60rpx;
   color: #fff;
 }
 .prize_time{
   flex: 1;
   text-align: center;
   letter-spacing: 2rpx;
   background-color: #f15b69;
 }
 .integra{
   flex: 2;
   background-color: #e00332;
   padding-left: 30rpx;
 }
 .icon-zhanghaoguanli{
   vertical-align: middle;
   margin-right: 20rpx;
   font-size: 60rpx;
 }
 .seach_index{
   width: 660rpx;
   height: 80rpx;
   line-height: 80rpx;
   font-size: 28rpx;
   color: #888;
   margin: 0 auto;
   padding: 30rpx;
 }
 .seach_placeH{
  width: 660rpx;
  height: 80rpx;
  background-color: #ececec;
  text-indent: 30rpx;
  letter-spacing: 2rpx;
 }
 .icon-search{
   font-size: 23px;
   float: right;
   margin-right: 30rpx;
 }
 .nav_list{
   overflow: hidden;
   margin-top: 40rpx;
 }
 .nav_list_li{
   float: left;
   width: 187.5rpx;
   height: 187.5rpx;
 }
 .nav_list_li>image{
   width: 80rpx;
   height: 80rpx;
   margin: 0 auto;
 }
 .nav_desc{
   font-size: 28rpx;
   color: #333;
   text-align: center;
   margin-top: 20rpx;
   letter-spacing: 2rpx;
 }
 .good_title{
   width: 100%;
   height: 80rpx;
   text-align: center;
   color: #333;
   font-size: 24rpx;
   position: relative;
   line-height: 80rpx;
   background-color: #fff;
   /* border-bottom: 1rpx solid #c6c6c6; */
   margin: 15rpx 0;
 }
 .good_title:before{
   content: "";
   border-top: 1px solid #333;
   display: block;
   position: absolute;
   width: 210rpx;
   top: 41.25rpx;
   left: 30rpx;
 }
 .good_title::after{
  content: "";
  border-top: 1px solid #333;
  display: block;
  position: absolute;
  width: 210rpx;
  top: 41.25rpx;
  right: 30rpx;
 }
 .goods_list{
   width: 100%;
   background-color: #f1f1f1;
 }
 .goods{
   width: 729.75rpx;
   background-color: #fff;
   margin: 0 10rpx;
   margin-top: 20rpx;
 }
 .goods>image{
   width: 730rpx;
   height: 730rpx;
   padding-bottom: 40rpx;
   background-color: #fff;
   border-radius: 10rpx;
 }
 .goods_title{
   font-size: 28rpx;
   color: #333;
   padding: 0 20rpx;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;
   overflow: hidden;
   letter-spacing: 3px;
 }
 .goods_desc{
   width: 60%;
   font-size: 24rpx;
   color: #666;
   padding: 50rpx 0 48rpx 20rpx;
   letter-spacing: 3px;
   line-height: 37.5rpx;
 }
 .goods_mes{
   overflow: hidden;
 }
 .code_price{
   float: left;
   font-size: 30rpx;
   color: #fd0c3f;
   padding: 0 10rpx 40rpx 20rpx;
 }
 .normal_price{
   float: left;
   font-size: 24rpx;
   color: #888;
   text-decoration: line-through;
   margin-top: 10rpx;
 }
 .btn{
   float: right;
   height: 60rpx;
   font-size: 25rpx;
   color: #fff;
   background-color: #fd0c3f;
   border: none;
   border-radius: 6rpx;
   line-height: 60rpx;
   margin-right: 20rpx;
 }
