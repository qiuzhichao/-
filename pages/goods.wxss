/* pages/goods/goods.wxss */
.goods{
    background-color: #f1f1f1;
}
image{
    width: 100%;
    height: 100%;
    display: block;
}
swiper{
    widows: 100%;
    height: 720rpx;
}
.goods_head{
    background-color: #fff;
    width: 100%;
    height: 100%;
    border-bottom: 1px solid #d1d1d1;
    padding-bottom: 40rpx;
    overflow: hidden;
}
.goods_title{
    width: 560rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-size: 28rpx;
    margin: 30rpx 32rpx 30rpx 32rpx;
}
.normal_price{
    font-size: 26rpx;
    color: #666;
    margin: 17.25rpx 0 40rpx 32rpx;
}
.coupons_{
    overflow: hidden;
    margin-left: 32rpx;
    margin-bottom: 40rpx;
}
.coupons_price{
    float: left;
    color: #fd0c3f;
    font-size: 36rpx;
}
.coupons_share{
    float: right;
    font-size: 24rpx;
    color: #888;
    margin-right: 32rpx;
    margin-top: 10rpx;
}
.coupons_num{
    width: 686rpx;
    height: 200rpx; 
    background-image: url(https://jianggo.net/static/index/img/bg_commodity_details_coupons.png
    );
    background-size: 100%;
    background-repeat: no-repeat;
    margin: 0 auto;
    display: flex;
    color: #fff;
}
.coupons_num_l{
    flex: 2.5;
    margin: 48rpx 52rpx 45rpx 80rpx;
}
.coupons_num_r{
    flex: 1;
    margin-top: 60rpx;
    font-size: 32rpx;
    letter-spacing: 4.5rpx;
}
.coupons_q{
    font-size: 36rpx;
    margin-bottom: 27rpx;
    text-align: center;
}
.coupons_t{
    text-align: center;
    font-size: 24rpx;
}
.big_data_goods_box{
    overflow-x: auto;
    width: 100%;    
}
.big_data_goods_l{
    overflow: hidden;
    width: 2850rpx;
    height: 503rpx;
}
.big_data_goods{
    float: left;
    width: 264rpx;
    height: 100%;
    margin-right: 20rpx;
}
.big_data{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    padding: 0 32rpx;
    overflow: hidden;
}
.big_data_title{
    margin-top: 30rpx;
    margin-bottom: 28rpx;
}
.big_data_Stitle{
    font-size: 24rpx;
    color: #666;
    margin-bottom: 30rpx;
}
.goods_img{
    width: 259.5rpx;
    height: 259.5rpx;
    border-radius: 10rpx;
}
.bia_data_goods_t{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 20rpx;
    font-size: 26rpx;
    color: rgb(51, 51, 51);
}
.bia_data_goods_desc{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 20rpx;
    font-size: 20rpx;
    color: rgb(102, 102, 102);
}
.bia_data_goods_p{
    margin-top: 10rpx;
    overflow: hidden;
}
.bia_data_goods_NP{
    float: left;
    color: rgb(253, 12, 63);
    font-size: 28rpx;
    margin-right: 0.2666rem;
}
.bia_data_goods_OG{
    color: rgb(102, 102, 102);
    font-size: 20rpx;
    text-decoration: line-through;
    margin-top: 10rpx;
}
.bia_data_goods_share{
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    color: rgb(102, 102, 102);
    font-size: 20rpx;
}