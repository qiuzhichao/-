/* pages/person/person.wxss */
.search-top{
    width: 100%;
}
.search-top>input{
    display: block;
    width: 90%;
    height: 60rpx;
    text-indent: 1em;
    padding: 18rpx 0;
    margin: 15rpx auto;
    border: 1px solid #e0e0e0;
}
.list{
    padding-bottom: 10rpx;
    widows: 100%;
    height: 100;
    overflow: hidden;
    background-color: #f1f1f1;
}
.list_item{
    float: left;
    width: 212rpx;
    height: 262rpx;
    background-color: #fff;
    margin: 20rpx 10rpx 0 10rpx;
    border-radius: 12rpx;
}
.list_item:nth-child(3n-2){
    margin-left: 37rpx;
}
.list_item>image{
    display: block;
    width: 192rpx;
    height: 192rpx;
    margin: 10rpx 10rpx 20rpx 10rpx;
}
.item_title{
    text-align: center;
    color: #555;
    font-size: 28rpx;
}
.none{
    position: relative;
    font-size: 30rpx;
    color: #555;
    width: 100%;
    height: 100rpx;
    background-color: #f1f1f1;
    line-height: 120rpx;
    text-align: center;
}